                     <font>
                        <Font size="20.0" />
                     </font>
                  </JFXPasswordField>
                  <Label fx:id="error" layoutX="223.0" layoutY="170.0" text="El usuario o la contraseña son incorrectos" textFill="#e43c3c" visible="false">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </children></StackPane>
   </children>
</AnchorPane>
