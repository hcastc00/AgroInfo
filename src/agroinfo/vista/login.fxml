                  <Image url="@/logo.png" />
               </image>
            </ImageView>
            <Label text="AgroInfo">
               <font>
                  <Font name="DejaVu Sans" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <StackPane fx:id="labels" prefHeight="490.0" prefWidth="250.0">
               <children>
                  <VBox fx:id="panelAgricultor" alignment="TOP_CENTER" prefHeight="490.0" prefWidth="250.0" />
